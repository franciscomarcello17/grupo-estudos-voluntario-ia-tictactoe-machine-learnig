{
  "openapi": "3.0.1",
  "info": {
    "title": "JogoDaVelhaIA.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Game/new": {
      "post": {
        "tags": [
          "Game"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Game/move": {
      "post": {
        "tags": [
          "Game"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlayerMoveRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Game/current-state": {
      "get": {
        "tags": [
          "Game"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/Game/database-states": {
      "get": {
        "tags": [
          "Game"
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CurrentGameState": {
        "type": "object",
        "properties": {
          "board": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "isPlayerTurn": {
            "type": "boolean"
          },
          "winner": {
            "type": "string",
            "nullable": true
          },
          "gameOver": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PlayerMoveRequest": {
        "type": "object",
        "properties": {
          "position": {
            "type": "integer",
            "format": "int32"
          },
          "currentState": {
            "$ref": "#/components/schemas/CurrentGameState"
          }
        },
        "additionalProperties": false
      }
    }
  }
}